# Functions {{{1

verbatim
call vsd#extras()
call vsd#more_colors()
silent! LightlineTheme deus
silent! VMTheme iceblue
if exists('loaded_xtabline')
  let g:xtabline.Vars.has_reloaded_scheme = 1
  silent! XTabTheme codedark
endif
filetype detect
endverbatim

