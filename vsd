# Colors {{{1

Normal				foreground	background

verbatim
if exists('g:Vsd')
  let contrast = [ ['#a8a8a8', '248'],
                  \['#b2b2b2', '249'],
                  \['#bdbdbd', '250']]
  let gui  = contrast[g:Vsd.contrast][0]
  let term = contrast[g:Vsd.contrast][1]
  exe "hi! Normal guibg=".gui." ctermbg=".term
